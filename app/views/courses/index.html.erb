<% provide(:title, "List Courses") %>
<h1>List of available courses</h1>

<div class="d-flex justify-content-around">
  <%= form_tag(courses_path, method: "get", class: "form-inline my-2 my-lg-0") do %>
    <%= text_field_tag :search, nil, class: "form-control mr-sm-2", type: "search", placeholder: "Search" %>
    <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
  <% end %>

  <%= form_tag(courses_path, method: "get", class: "form-inline my-2 my-lg-0") do %>
    <%= collection_select :filter, :group_id, Group.all, :id, :name %>
    <%= submit_tag "Filter", class: "btn btn-outline-success my-2 my-sm-0" %>
  <% end %>
</div>

<%= render 'course_list' %>

<% if logged_in? %>
  <% if current_user.admin? %>
    <%= link_to "Create new course", new_course_path, class: "btn btn-primary btn-md", role: "button" %>
  <% end %>
<% end %>
